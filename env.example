# Inovio Tokenization Test Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000

# Inovio API Configuration
# IMPORTANT: Keep your SECRET_KEY secure and never commit it to version control
SECRET_KEY=your_secret_key_here
SITE_ID=your_site_id
API_VERSION=2.22

# Token Service URL - Choose environment:
# QAT/Testing Environment:
TOKEN_SERVICE_URL=https://t1api.inoviopay.com/payment/token_service.cfm
# Production Environment:
# TOKEN_SERVICE_URL=https://api.inoviopay.com/payment/token_service.cfm

# Payment Gateway Configuration (for form submission)
PAYMENT_GATEWAY_URL=https://t1api.inoviopay.com/payment/pmt_service.cfm
REQ_USERNAME=your_api_username
REQ_PASSWORD=your_api_password
MERCH_ACCT_ID=your_merchant_account_id

# Security
TIMESTAMP_TOLERANCE=300

# Test Card Data (for development/testing only)
TEST_CARD_NUMBER=409159111111111
TEST_CARD_EXPIRY=1229
TEST_CARD_CVV=123
